{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "files": {
    "includes": ["src/**/*.{js,jsx,ts,tsx,json}", "!src/routeTree.gen.ts", "!node_modules", "!dist"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useNumberNamespace": "error",
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn",
        "useSelfClosingElements": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 150,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "jsxQuoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "linter": {
      "enabled": true
    }
  }
}
